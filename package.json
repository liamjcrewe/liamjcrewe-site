{
  "name": "liamjcrewe-site",
  "version": "1.0.0",
  "description": "My personal website",
  "license": "MIT",
  "author": "Liam Crewe <liam.j.crewe@gmail.com>",
  "scripts": {
    "build": "next build && next export && touch out/.nojekyll",
    "dev": "next dev",
    "lint": "standard '**/*.js' --verbose | snazzy",
    "lint-fix": "standard '**/*.js' --fix",
    "start": "next start",
    "test": "jest",
    "deploy": "npm run lint && npm run test && npm run build && git add out/ && git commit -m \"Deploy to GitHub pages\" && git push origin master && git subtree push --prefix out git@github.com:liamjcrewe/liamjcrewe.github.io.git master"
  },
  "dependencies": {
    "@zeit/next-css": "^1.0.1",
    "next": "^9.1.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-icons": "^3.8.0",
    "sanitize.css": "^9.0.0",
    "styled-components": "^4.2.0"
  },
  "devDependencies": {
    "@testing-library/react": "^9.3.0",
    "babel-plugin-styled-components": "^1.10.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.9.0",
    "jest-styled-components": "^6.3.3",
    "snazzy": "^8.0.0",
    "standard": "^12.0.1"
  },
  "standard": {
    "ignore": [
      "out/"
    ],
    "env": [
      "jest"
    ]
  }
}
